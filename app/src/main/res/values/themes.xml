<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RadioAva" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/secondaryDarkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/circular_std_light</item>
    </style>

    <style name="seeMoreTextAppearance">
        <item name="android:text">@string/see_more</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="boldTitleTextAppearance">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lightTitleTextAppearance">
        <item name="android:fontFamily">@font/circular_std_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="pageTitleTextAppearance">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>