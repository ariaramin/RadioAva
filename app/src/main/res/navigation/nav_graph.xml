<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailArtistFragment"
            app:destination="@id/detailArtistFragment" />
        <action
            android:id="@+id/action_homeFragment_to_allMusicsFragment"
            app:destination="@id/allMusicsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_allVideosFragment"
            app:destination="@id/allVideosFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/browseFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.BrowseFragment"
        android:label="fragment_browse"
        tools:layout="@layout/fragment_browse" >
        <action
            android:id="@+id/action_browseFragment_to_detailArtistFragment"
            app:destination="@id/detailArtistFragment" />
        <action
            android:id="@+id/action_browseFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_browseFragment_to_allMusicsFragment"
            app:destination="@id/allMusicsFragment" />
        <action
            android:id="@+id/action_browseFragment_to_allVideosFragment"
            app:destination="@id/allVideosFragment" />
        <action
            android:id="@+id/action_browseFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>
    <fragment
        android:id="@+id/artistsFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.ArtistsFragment"
        android:label="fragment_artists"
        tools:layout="@layout/fragment_artists" >
        <action
            android:id="@+id/action_artistsFragment_to_detailArtistFragment"
            app:destination="@id/detailArtistFragment" />
        <action
            android:id="@+id/action_artistsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/myMusicFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.MyMusicFragment"
        android:label="fragment_my_music"
        tools:layout="@layout/fragment_my_music" />
    <fragment
        android:id="@+id/videosFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.VideosFragment"
        android:label="fragment_videos"
        tools:layout="@layout/fragment_videos" >
        <action
            android:id="@+id/action_videosFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_videosFragment_to_allVideosFragment"
            app:destination="@id/allVideosFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailArtistFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.DetailArtistFragment"
        android:label="fragment_detail_artist"
        tools:layout="@layout/fragment_detail_artist" >
        <action
            android:id="@+id/action_detailArtistFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_detailArtistFragment"
            app:destination="@id/detailArtistFragment" />
        <action
            android:id="@+id/action_searchFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>
    <fragment
        android:id="@+id/allMusicsFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.Music.AllMusicsFragment"
        android:label="AllMusicsFragment" >
        <action
            android:id="@+id/action_allMusicsFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_allMusicsFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>
    <fragment
        android:id="@+id/allVideosFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.Video.AllVideosFragment"
        android:label="AllVideosFragment" >
        <action
            android:id="@+id/action_allVideosFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.ariaramin.radioava.ui.Fragments.AlbumFragment"
        android:label="AlbumFragment" />
</navigation>